<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="50dp"-->
<!--        android:text="我"-->
<!--        android:textSize="30sp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:gravity="center"-->
<!--        android:background="@color/background_biaoti"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/my_xinxi1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="150dp"
            android:background="@color/background_biaoti"
            android:orientation="horizontal">
            <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/touxiang2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/my_name"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="20dp"
                    android:text="小明"
                    android:textSize="30sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/my_bianji"
                        android:layout_marginTop="40dp"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="编辑信息"/>
                    <ImageView
                        android:layout_marginTop="40dp"
                        android:layout_width="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="20dp"
                        android:background="@drawable/xiangyou"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_xiugai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_biaoti"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/xiugai"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="修改密码"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_shenhe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_biaoti"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shenhe"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="审核记录"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_zhaopin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_biaoti"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/zhaopin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="招聘天地"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_chengji"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_biaoti"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/chengji"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的成绩"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>