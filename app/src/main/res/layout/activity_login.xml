<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020我们携手共进\n共 建 美 好 校 园"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入账号"
            android:maxLines="1"
            android:textColorHint="@color/colorWhite"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:background="@drawable/login_border_botton"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:maxLines="1"
            android:textColorHint="@color/colorWhite"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:background="@drawable/login_border_botton"
            />
        <RadioGroup
            android:id="@+id/login_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radioButton_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:checked="true"
                android:button="@drawable/radio_button_style"
                android:layout_marginLeft="10dp"
                />
            <RadioButton
                android:id="@+id/radioButton_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:button="@drawable/radio_button_style"
                android:layout_marginLeft="30dp"
                />
            <RadioButton
                android:id="@+id/radioButton_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:button="@drawable/radio_button_style"
                android:layout_marginLeft="30dp"
                />
            <RadioButton
                android:id="@+id/radioButton_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"
                android:button="@drawable/radio_button_style"
                android:layout_marginLeft="30dp"
                />



        </RadioGroup>
         加载动画
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="登录"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/login_btn_pressed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
<!--            <LinearLayout-->
<!--                android:layout_weight="1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--                <TextView-->
<!--                    android:id="@+id/btn_login_register"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="我要注册"-->
<!--                    android:textColor="@color/colorWhite"-->
<!--                    android:textSize="17sp"-->
<!--                    android:layout_marginTop="15dp"/>-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_login_forgetPassword"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>