<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UserInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_biaoti"
        android:layout_marginBottom="5dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/xiangzuo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp">
        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小红"
                    android:textSize="30sp"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/bg_comment"

                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="学号:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1607052205"
                    style="@style/text_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="手机:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13960149601"
                    style="@style/text_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="年级:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16级"
                    style="@style/text_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="邮箱:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="447231887@qq.com"
                    style="@style/text_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="专业:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="软件工程"
                    style="@style/text_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_banji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:text="班级:"
                    style="@style/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="40dp"
                    android:id="@+id/user_info_banji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1班"
                    style="@style/text_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/userinfo_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/user_info_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/table_item">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/user_info_chengji"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="成绩" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/user_info_zhengshu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="证书" />
            </com.google.android.material.tabs.TabLayout>
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</LinearLayout>